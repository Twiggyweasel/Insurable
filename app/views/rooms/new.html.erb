<div class="row">
    <div class="col-lg-12 center">
        <h1>Create a New Room</h1>
    </div>
</div>

<div class='row'>
    <div class='col-md-6 col-md-offset-3 center'>
        <div class='well'>
            <%= form_for @room do |f| %>
            
            <%= f.label :Home %>
            <%= f.select :home_id, current_user.homes.collect{ |c| [c.home_name, c.id] } %>
            
            <%= f.label :room_name %>
            <%= f.text_field :room_name %>
            
            <%= f.submit class:"btn btn-success" %>
            <% end %>
        </div>
    </div> 
</div>