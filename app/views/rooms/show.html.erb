<div class='row'>
    <h1 class='col-md-4 col-md-offset-4 center'><%= @room.room_name %></h1>
    
  </div>
</div>
<div class='row'>
    <div class='col-md-4 col-md-offset-4 center'>
        <%= link_to 'Add Item', new_item_path, class: 'btn btn-primary' %>
    </div>
</div>
<hr/>
<div class='row'>
    <div class='col-md-8 col-md-offset-2'>
        <% @room.items.each do |item| %>
        <div class='panel panel-info'>
            <div class='panel-heading'>
            <h4 class='panel-title center'><%= item.item_name %> </h4> 
            </div>
            <div class='panel-body'>
                <div class='row'>
                    <div class="col-md-2 col-md-offset-1">
                        <a href="#" class="thumbnail">
                        <img src="http://placehold.it/140x140" alt="">
                        </a>
                    </div>
                    <div class='col-md-2 top-offset'>
                        <h4 class='center'>Bought on:<%= item.purchase_date %>  </h5>
                    </div>
                    <div class='col-md-2 top-offset'>
                        <h4 class='center'>Value: $<%= item.price %>.00</h5>
                    </div>
                    <div class='col-md-3 top-offset'>
                        <h4><%= link_to 'Edit',edit_item_path(item), class:'label label-primary' %> / <%= link_to 'Delete','', class:'label label-danger' %></h4>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add item</h4>
      </div>
      <div class="modal-body">
        <%= render 'shared/form' %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $('#myModal').on('shown.bs.modal', function () {
  $('#myInput').focus()
})
</script>