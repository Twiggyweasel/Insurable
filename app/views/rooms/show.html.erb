<div class='row'>
    <h1 class='col-md-4 col-md-offset-4 center'><%= @room.room_name %></h1>
    
  </div>
</div>
<div class='row'>
    <div class='col-md-4 col-md-offset-4 center'>
        <%= link_to 'Add Item', new_item_path, remote: true, class: 'btn btn-primary' %>
        <%= link_to 'Add Room', new_room_path, remote: true, class: 'btn btn-primary' %>
    </div>
</div>
<hr/>
<div class='row'>
    <div class='col-md-8 col-md-offset-2'>
        <table class='table table condensed'>
          <thead>
            <tr>
              <th>Image</th>
              <th>Item Name</th>
              <th>Purchase Date</th>
              <th>Value</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @room.items.each do |item_test| %>
              <th><a href="#" class="thumbnail"><img src="https://placehold.it/140x140" alt=""></a></th>
              <th><%= item_test.item_name %></th>
              <th><%= item_test.purchase_date %></th>
              <th><%= item_test.price %></th>
              <th><%= link_to 'Edit',edit_item_path(item_test), class:'btn btn-primary btn-sm' %>  <%= link_to 'Delete', '', class:'btn btn-danger btn-sm' %></th>
            </tr>
            <% end %>
          </tbody>
            
        </table>
        
    </div>
</div>
<div class='row'>
    <div class='col-md-8 col-md-offset-2'>
        <% @room.items.each do |item| %>
        <div class='panel panel-info'>
            <div class='panel-heading'>
            <h4 class='panel-title center'><%= item.item_name %> </h4> 
            </div>
            <div class='panel-body'>
                <div class='row'>
                    <div class="col-md-2 col-md-offset-1">
                        <a href="#" class="thumbnail">
                        <%= image_tag(item.item_picture.url) %>
                        </a>
                    </div>
                    <div class='col-md-2 top-offset'>
                        <h4 class='center'>Bought on:<%= item.purchase_date %>  </h5>
                    </div>
                    <div class='col-md-2 top-offset'>
                        <h4 class='center'>Value: $<%= item.price %>.00</h5>
                    </div>
                    <div class='col-md-3 top-offset'>
                        <h4><%= link_to 'Edit',edit_item_path(item), class:'btn btn-primary' %> / <%= link_to 'Delete','', class:'label label-danger' %></h4>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

<%= render 'dialog' %>

