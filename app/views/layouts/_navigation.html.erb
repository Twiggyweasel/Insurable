<header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "Insurable", '', class: "btn-lg", id: "logo"%>
      <% if logged_in? %>
        <div class="nav_user_icon">
          <div class="dropdown">
            <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.name %> <b class="caret"></b>
            <% end %>
            <ul class='dropdown-menu'>
                <li><%= link_to "Home Summary", user_path(current_user) %></li>
                <li><%= link_to "Room Summary", homes_path %></li>
                <li><%= link_to "Edit Profile", '' %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", logout_path %></li>
              </ul>
            </div>
          </div>
        <% else %>
        <form id="signin" class="navbar-form navbar-right" role="form">
            <div class="input-group">
              <%= form_for :logins, :url=>{ :controller => :logins, :action => :new}, :remote => true do |f| %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <%= f.email_field :email, :class => 'form-control', :placeholder => "Email Address" %>        
                            <!--<input id="email" type="email" class="form-control" name="email" value="" placeholder="Email Address">                                        
                        --></div>
                      
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.password_field :password, :class => 'form-control', :placeholder => "Password" %>
                            <!--<input id="password" type="password" class="form-control" name="password" value="" placeholder="Password">                                        
                        --></div>
                    <%= f.submit 'Login', class: 'btn btn-primary' %>
                        <!--<button type="submit" class="btn btn-primary">Login</button>-->
                   </form>   
              <% end %>
        </div>
        <div class="nav_user_icon">
          <%= link_to "login", login_path, class: "btn btn-primary", id:"login-active" %>
        </div>
        <% end %>
    </div>
</header>