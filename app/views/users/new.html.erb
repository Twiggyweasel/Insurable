<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class="container"> 
        <div class="col-lg-6 col-lg-offset-3 center">
            <h1>Register as a New User</h1>
            <hr/>
            <div class="well">
                <%= form_for @user do |f| %>
                
                <%= f.label :name %>
                <%= f.text_field :name %>
          
                <%= f.label :email %>
                <%= f.email_field :email %>
                
                <%= f.label :password %>
                <%= f.password_field :password %>
                
                <%= f.submit "Register", class: "btn btn-success" %>
                <% end %>
            </div>
        </div>
    </div>
</div>

